							"mode": "raw",
							"raw": "{\n  \"origin\": \"MANUAL\",\n  \"amount\": 150.75,\n  \"currency\": \"INR\",\n  \"merchant\": \"Coffee Shop\",\n  \"category\": \"Food & Beverages\",\n  \"transactionTime\": \"2024-07-30T10:30:00\"\n}"
